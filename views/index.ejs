<!DOCTYPE html>
<html>
  <head>
    <% include partials/head %>
    <link rel='stylesheet' href='/stylesheets/index.css' />
    <script type="text/javascript" src="/javascripts/filter.js"></script>
  </head>
  <body>
    <% include partials/navbar %>

<div class="container">
    <% songData.forEach(function(s) { %>
      <div class="col-md-12 song-category <%= s.category.language %>">

        <h2 class="row-title"><%= s.category.genre %> (<%= s.category.language %>)</h2>
          <div class="well">
              <div id="<%= s.id %>" class="carousel slide" data-interval="false">

                  <!-- Carousel items -->
                  <div class="carousel-inner">

                    <% s.all.forEach(function(songs, index) { %>
                      <div class="item <%if (index===0) {%>  active <%}%>">
                          <div class="row">
                              <% songs.forEach(function(song) { %>
                                <div class="col-sm-3 song-thumbnail"><a href="/<%= song.artist %>/<%= song.name %>?difficulty=normal"><img src="/images/<%= song.image %>" alt="Image" class="img-responsive"></a>
                              </div>
                              <% }); %>
                          </div> <!--/row-->
                      </div> <!--/item-->
                    <% }); %>

                  </div> <!--/carousel-inner-->

                  <a class="left carousel-control" href="#<%= s.id %>" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>

                  <a class="right carousel-control" href="#<%= s.id %>" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>

              </div> <!--/s.id-->
          </div> <!--/well-->

      </div>
  <% }); %>
</div>

  </body>
</html>
